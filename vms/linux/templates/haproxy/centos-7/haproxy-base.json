    {
      "type": "shell",
      "environment_vars": [
        "VAGRANT=false",
        "EPEL_DOWNLOAD_URL={{user `epel_download`}}",
        "DRACUT_DOWNLOAD_URL={{user `dracut_modules_download`}}",
        "UPDATE={{user `update`}}"
      ],
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/centos/common/setup.sh",
      "pause_before": "30s",
      "only": [
        "virtualbox-qemu",
        "vmware",
        "amazon",
        "kvm",
        "xen"
      ]
    },
    {
      "type": "shell",
